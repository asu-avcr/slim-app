{
    "$id": "https://github.com/asu-avcr/slim-app/schemas/database.json",
    "type": "object",
    "additionalProperties": true,
    "required": ["driver", "host", "dbname", "user", "password"],
    "properties": {
        "driver": {
            "type": "string"
        },
        "host": {
            "type": "string"
        },
        "dbname": {
            "type": "string"
        },
        "user": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "ssl": {
            "type": "boolean",
            "default": false
        }
    }
}
